<li class="well">
<!-- Making every game name a clickable link -->
  <ul>{{#link-to 'game' game.id}}{{game.name}}{{/link-to}}</ul>


<!-- Image on every game -->
  <p>{{#link-to 'game' game.id}}<img src={{game.image}} alt={{game.name}} {{action 'imageHide'}}>{{/link-to}}</p>

  <ul>{{game.console}}</ul>
</li>
